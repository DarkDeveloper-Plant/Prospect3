<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/app_bar_parts" />

    <com.melnykov.fab.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include">

        <RelativeLayout
            android:id="@+id/relativeBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_ewords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#d9d9d9"
                android:padding="4dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="7dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/textView_ewords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>
            <ir.adad.androidsdk.AdadBannerAd
                android:id="@+id/banner_ad_view"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_below="@+id/card_ewords"
                app:token="83699cf2-3f11-497f-a4c3-a2271f697617"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
    </com.melnykov.fab.ObservableScrollView>
</RelativeLayout>

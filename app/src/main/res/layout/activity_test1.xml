<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_test1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.appbar.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_test"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:layout_height="match_parent">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Check correct one."
            android:id="@+id/tvt_test1"
            android:textColor="#000"
            android:textSize="23dp"
            android:layout_margin="5dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_below="@+id/tvt_test1"
            app:cardElevation="5dp"
            android:id="@+id/card_tst1"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_test1"
                    android:textColor="#000"
                    android:textSize="23sp"
                    android:layout_margin="5dp"
                    android:text="sdsdsd"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_below="@+id/tv_test1"
                    android:orientation="horizontal"
                    android:id="@+id/rgr1"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:textSize="18sp"
                        android:id="@+id/radio_tst1_1"
                        android:text="True"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/radio_tst1_2"
                        android:text="False"/>
                </RadioGroup>



                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_test2"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:layout_below="@+id/rgr1"
                    android:textSize="23dp"
                    android:layout_margin="5dp"
                    android:text="sdsdsd"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_below="@+id/tv_test2"
                    android:orientation="horizontal"
                    android:id="@+id/rgr2"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:textSize="18sp"
                        android:layout_marginEnd="20dp"
                        android:id="@+id/radio_tst1_3"
                        android:text="True"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radio_tst1_4"
                        android:textSize="18sp"
                        android:text="False"/>
                </RadioGroup>


                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_test3"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:layout_below="@+id/rgr2"
                    android:textSize="23dp"
                    android:layout_margin="5dp"
                    android:text="sdhvhbhbhbsdsd"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_below="@+id/tv_test3"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:textSize="18sp"
                        android:id="@+id/radio_tst1_5"
                        android:text="True"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/radio_tst1_6"
                        android:text="False"/>
                </RadioGroup>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Place correct one."
            android:id="@+id/tvt_test2"
            android:textColor="#000"
            android:layout_below="@+id/card_tst1"
            android:textSize="23dp"
            android:layout_margin="5dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_below="@+id/tvt_test2"
            app:cardElevation="5dp"
            android:id="@+id/card_tst2"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_test4"
                    android:textColor="#000"
                    android:textSize="23sp"
                    android:layout_margin="5dp"
                    android:text="sdsdsd"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_below="@+id/tv_test4"
                    android:orientation="vertical"
                    android:id="@+id/rgr3"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:textSize="18sp"
                        android:id="@+id/radio_tst1_7"
                        android:text="True"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radio_tst1_8"
                        android:textSize="18sp"
                        android:text="False"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:id="@+id/radio_tst1_9"
                        android:textSize="18sp"
                        android:text="True"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radio_tst1_10"
                        android:textSize="18sp"
                        android:text="False"/>
                </RadioGroup>



                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_test5"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:layout_below="@+id/rgr3"
                    android:textSize="23sp"
                    android:layout_margin="5dp"
                    android:text="sdsdsd"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_below="@+id/tv_test5"
                    android:orientation="vertical"
                    android:id="@+id/rgr4"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:textSize="18sp"
                        android:id="@+id/radio_tst1_11"
                        android:text="True"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radio_tst1_12"
                        android:textSize="18sp"
                        android:text="False"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:textSize="18sp"
                        android:id="@+id/radio_tst1_13"
                        android:text="True"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:id="@+id/radio_tst1_14"
                        android:text="False"/>
                </RadioGroup>


                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_test6"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:layout_below="@+id/rgr4"
                    android:textSize="23sp"
                    android:layout_margin="5dp"
                    android:text="sdhvhbhbhbsdsd"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_below="@+id/tv_test6"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:id="@+id/radio_tst1_15"
                        android:textSize="18sp"
                        android:text="True"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radio_tst1_16"
                        android:textSize="18sp"
                        android:text="False"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:textSize="18sp"
                        android:id="@+id/radio_tst1_17"
                        android:text="True"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:id="@+id/radio_tst1_18"
                        android:text="False"/>
                </RadioGroup>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. What are the people like in the pictures below?"
            android:id="@+id/tvt_test3"
            android:textColor="#000"
            android:layout_below="@+id/card_tst2"
            android:textSize="23dp"
            android:layout_margin="5dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_below="@+id/tvt_test3"
            app:cardElevation="5dp"
            android:id="@+id/card_tst3"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_margin="-5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="200dp"
                    android:id="@+id/img_tst1"
                    android:src="@drawable/angry"/>
                <EditText
                    android:layout_width="150dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:hint="pic1"
                    android:layout_below="@+id/img_tst1"
                    android:id="@+id/ed_test1"
                    android:layout_marginTop="5dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_marginTop="10dp"
                    android:layout_margin="-5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="200dp"
                    android:layout_below="@+id/ed_test1"
                    android:id="@+id/img_tst2"
                    android:src="@drawable/angry"/>
                <EditText
                    android:layout_width="150dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:hint="pic2"
                    android:layout_below="@+id/img_tst2"
                    android:id="@+id/ed_test2"
                    android:layout_marginTop="5dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_margin="-5dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="200dp"
                    android:id="@+id/img_tst3"
                    android:layout_below="@+id/ed_test2"
                    android:src="@drawable/angry"/>
                <EditText
                    android:layout_width="150dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:hint="pic3"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/img_tst3"
                    android:id="@+id/ed_test3"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>




        <com.melnykov.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/btn_check"
            android:layout_margin="5dp"
            android:src="@drawable/ic_done_black_24dp"
            android:layout_below="@+id/card_tst3"/>

    </RelativeLayout>



</RelativeLayout>



</ScrollView>